<div class= "sinup-page">
  <header class= "header">
    <div>アカウント作成</div>
  </header>
  <div class="container">
    <%= form_for(resource, as: resource_name, url: registration_path(current_user), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <div class="user-img">
        <div class="user-img-preview" id="userImgPreview">
          <img id="thumbnail" class="user-img-preview_content" accept="image/*" src="">
          <p class="user-img-preview_text">画像をアップロード済み</p>
        </div>
        <label for="file_photo" class="rounded-circle user-profile-img">
          <div class="user-profile-img_description">画像をアップロード</div>
          <i class="fas fa-camera fa-3x"></i>
          <%= f.file_field :img_name, id: "file_photo" %>
        </label>
      </div>
      <div class="form-group">
        <label>名前</label>
        <%= f.text_field :name, class: "form-control", placeholder: "名前を入力してください" %>
      </div>
      <div class="form-group">
        <label>メールアドレス</label>
        <%= f.email_field :email,class: "form-control", autofocus: true, autocomplete: "email" %>
      </div>
      <div class="form-group">
        <div><label>性別</label></div>
        <div class= "form-check form-check-inline">
          <%= f.radio_button :sex, "男", class: "form-check-input", id:"inline-radio1" %>
          <label class="form-check-label" for="inlineRadio1">男</label>
        </div>
        <div class= "form-check form-check-inline">
          <%= f.radio_button :sex, "女", class: "form-check-input", id:"inline-radio1" %>
          <label class="form-check-label" for="inlineRadio1">女</label>
        </div>
      <div class="form-group">
        <label>自己紹介文(最大1000文字)</label>
        <%= text_area :user, :self_introduction, maxlength: "1000", rows:"10",placeholder: "趣味や好きなものなどを入力してください", class: "form-control js-text" %>
        <P class="js-text-count pull-right"></P>
      </div>
      <div class="form-group">
        <%= f.label '更新するにはパスワードを入力してください' %>
        <%= f.password_field :current_password, class: "form-control", autocomplete: "off" %>
      </div>
      <div class= "text-center">
        <%= f.submit "更新", class: "btn submit-btn"%>
      </div>
    <% end %>
  </div>
</div>